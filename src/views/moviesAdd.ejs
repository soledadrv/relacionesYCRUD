<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Agregar Película</h1>
    <br>
    <section class="formulario">
        <form action="/movies/create" method="POST">

            <label for="title">Title </label>
            <p><input type="text" name="title" id="" value="<%= locals.old && old.title ? old.title : null%>" required>
            <% if (locals.errors && errors.title) { %> 
                <small> <%= errors.title.msg %>  </small>
            <% } %></p>

            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" value="<%= locals.old && old.rating ? old.rating : null%>" required>
            <% if (locals.errors && errors.rating) { %> 
                <small> <%= errors.rating.msg %>  </small>
            <% } %></p>

            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" value="<%= locals.old && old.awards ? old.awards : null%>" value="<%= locals.old && old.title ? old.title : null%>" required>
            <% if (locals.errors && errors.awards) { %> 
                <small> <%= errors.awards.msg %>  </small>
            <% } %></p>

            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" value="<%= locals.old && old.release_date ? old.release_date : null%>" required>
            <% if (locals.errors && errors.release_date) { %> 
                <small> <%= errors.release_date.msg %>  </small>
            <% } %></p>

            <label for="length">Length </label>
            <p><input type="number" name="length" id="" value="<%= locals.old && old.length ? old.length : null%>" required>
            <% if (locals.errors && errors.length) { %> 
                <small> <%= errors.length.msg %>  </small>
            <% } %></p>

            <label for="genreID">Genre </label>
            <p>
                <select name="genre_id" id="" required>
                    <option value="" disabled <%= locals.old && old.genre === '' ? 'selected' : null %>>- select genre - </option>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>" <%= locals.old && old.genre === genre.id ? 'selected' : null %>><%= genre.name %> </option>
                    <% }); %>
                </select>
            <% if (locals.errors && errors.genre) { %> 
                <small> <%= errors.genre.msg %>  </small>
            <% } %></p>
            
            <br>
            <p> <button class="botonAgregar" type="submit">Agregar</button>
            
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
    
</body>

</html>