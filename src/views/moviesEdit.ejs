<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title class="titulo">Editar Película</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
      </figure>
    <h1 class="titulo">Película Editada:  <%= Movie.title %></h1>
    <section class="formulario">

        <form action="/movies/update/<%= Movie.id %>?_method=PUT" method="POST">

            <label for="title">Title </label>
            <p><input type="text" name="title" id="" value="<%= locals.old && old.title ? old.title : Movie.title%>" required>
            <% if (locals.errors && errors.title) { %> 
                <small> <%= errors.title.msg %>  </small>
            <% } %></p>

            <label for="rating">Rating </label>
            <p><input type="number" name="rating" id="" value="<%= locals.old && old.rating ? old.rating : Movie.rating%>" required>
            <% if (locals.errors && errors.rating) { %> 
                <small> <%= errors.rating.msg %>  </small>
            <% } %></p>

            <label for="awards">Awards </label>
            <p><input type="number" name="awards" id="" value="<%= locals.old && old.awards ? old.awards : Movie.awards%>" required>
            <% if (locals.errors && errors.awards) { %> 
                <small> <%= errors.awards.msg %>  </small>
            <% } %></p>

            <label for="release_date">Release date </label>
            <p><input type="date" name="release_date" id="" value="<%= locals.old && old.release_date ? old.release_date : Movie.release_date%>" required">
            <% if (locals.errors && errors.release_date) { %> 
                <small> <%= errors.release_date.msg %>  </small>
            <% } %></p>

            <label for="length">Length </label>
            <p><input type="number" name="length" id="" value="<%= locals.old && old.length ? old.length : Movie.length%>" required>
            <% if (locals.errors && errors.length) { %> 
                <small> <%= errors.length.msg %>  </small>
            <% } %></p>

            <label for="genre_id">Genre </label>
            <p>
                <select name="genre_id" id="" required>
                    <% allGenres.forEach(genre => { %>
                    <option value="<%= genre.id %>" <% if (Movie.genre.id == genre.id) { %><%= 'selected' %><% }; %>><%= genre.name %></option>
                    <% }); %>
                </select>
            <% if (locals.errors && errors.genre) { %> 
                <small> <%= errors.genre.msg %>  </small>
            <% } %></p>

    <!--
            <label for="genre_id">Genre ID </label>
            <p><input type="number" name="genre_id" id="" value="<%= Movie.genre_id %>"></p>
        -->
            
            <br>
            <p> <button class="botonAgregar" type="submit">Actualizar</button>
        
            <a  class="botonVolver" href="/movies">Listado de Películas</a></p>
        </form>
    </section>
</body>

</html>